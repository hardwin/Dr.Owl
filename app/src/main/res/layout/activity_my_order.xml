<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.user.drowl.MyOrderActivity"
    android:weightSum="10">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="My Orders"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_weight="1"
        android:weightSum="5">

        <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/inputfield"
            android:spinnerMode="dropdown"
            android:gravity="center"
            android:layout_weight="2"
            android:id="@+id/select_medicine"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/inputfield"
            android:hint="Quantity"
            android:gravity="center"
            android:textCursorDrawable="@null"
            android:layout_marginLeft="2dp"
            android:id="@+id/medicine_quantity"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/inputfield"
            android:hint="Price"
            android:gravity="center"
            android:layout_marginLeft="2dp"
            android:id="@+id/medicine_price"
            android:layout_weight="1"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/inputfield"
            android:text="Upload Prescription"
            android:gravity="center"
            android:layout_marginLeft="2dp"
            android:id="@+id/upload_prescription"
            android:layout_weight="1"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Items Added To Cart"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_weight="0.5"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="5"
        android:gravity="center"
        android:layout_weight="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Medicine Name"
            android:background="@drawable/inputfield"
            android:layout_weight="2"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/inputfield"
            android:text="Qty"
            android:layout_weight="1"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/inputfield"
            android:text="Price"
            android:layout_weight="1"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/inputfield"
            android:text="Unit Price"
            android:layout_weight="1"
            android:gravity="center"/>

    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/order_list"
        android:layout_weight="5.5"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/btn_checkout"
        android:id="@+id/order_checkout"
        android:layout_gravity="center"
        android:layout_weight="1"/>
</LinearLayout>
